<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mapFragment">

    <fragment
        android:id="@+id/mapFragment"
        android:name="com.trovaparco.ui.map.MapFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_map">
        <action
            android:id="@+id/action_mapFragment_to_parkDetailFragment"
            app:destination="@id/parkDetailFragment" />
    </fragment>

    <fragment
        android:id="@+id/parkDetailFragment"
        android:name="com.trovaparco.ui.details.ParkDetailFragment"
        android:label="Park Details"
        tools:layout="@layout/fragment_park_detail">
        <argument
            android:name="parkId"
            app:argType="string" />
    </fragment>
</navigation>
